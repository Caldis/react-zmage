{
  "name": "react-zmage",
  "version": "1.0.0",
  "description": "A scalable image container",
  "keywords": [
    "react",
    "image",
    "zmage",
    "zoom",
    "zoomable",
    "slidershow"
  ],
  "files": [
    "dist/"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./ssr": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ssr/index.mjs",
      "require": "./dist/ssr/index.cjs",
      "default": "./dist/ssr/index.mjs"
    },
    "./style.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Caldis/react-zmage.git",
    "directory": "packages/core"
  },
  "author": "caldis",
  "license": "MIT",
  "homepage": "https://zmage.caldis.me",
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "build:watch": "tsup --config tsup.config.ts --watch",
    "lint": "pnpm lint:eslint && pnpm lint:style",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:style": "stylelint \"src/**/*.{css,less}\"",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react-use": "^17.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.3.0",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^8.5.0",
    "eslint-plugin-react": "^7.23.2",
    "jsdom": "^24.0.0",
    "less": "^4.1.1",
    "postcss": "^8.4.38",
    "postcss-modules": "^6.0.1",
    "postcss-less": "^6.0.0",
    "vitest": "^1.6.0",
    "postcss-preset-env": "^9.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "tsup": "^8.0.1",
    "typescript": "^4.2.4"
  }
}
